                </div>
                <br>
                <div style="display: flex;justify-content: center;">
                    <input type="checkbox" name="name" value=""/></input>
                    <label style="margin-left:10px">Agree to the Terms Of Condition</label>
                </div>
            </div>

        </div>

    </form>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const checkbox = document.querySelector('input[type="checkbox"]');
            const signupButton = document.getElementById("signup-btn");
            const form = document.querySelector("form");

            checkbox.addEventListener("change", () => {
                signupButton.disabled = !checkbox.checked;
            });

            form.addEventListener("submit", function (e) {
                e.preventDefault();

                // Optional: You can validate the form fields here before redirecting

                // Redirect to EmailVerification.cshtml (server-rendered view)
                window.location.href = '@Url.Action("EmailVerification", "User")';
            });
        });
    </script>

</body>
</html>